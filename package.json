{
    "name": "view",
    "version": "0.1.0-beta.1",
    "description": "view浏览器",
    "main": "./out/main/main.js",
    "scripts": {
        "pack": "npm run build && electron-builder --dir",
        "dist": "npm run build && electron-builder -p never",
        "start": "electron-vite --ignoreConfigWarning preview",
        "dev": "electron-vite --ignoreConfigWarning dev",
        "build": "electron-vite --ignoreConfigWarning build"
    },
    "author": {
        "name": "xsf",
        "email": "xushengfeng_zg@163.com"
    },
    "homepage": "https://github.com/xushengfeng/view/",
    "license": "GPL-3.0",
    "dependencies": {
        "electron-store": "^8.1.0"
    },
    "devDependencies": {
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@types/node": "^18.8.4",
        "electron": "^25.1.0",
        "electron-builder": "^23.6.0",
        "electron-vite": "^1.0.16",
        "typescript": "^5.0.4",
        "vite": "^4.0.4"
    },
    "build": {
        "appId": "com.esearch.app",
        "directories": {
            "output": "build"
        },
        "compression": "maximum",
        "icon": "./assets/logo",
        "electronDownload": {
            "mirror": "https://npmmirror.com/mirrors/electron/"
        },
        "npmRebuild": false,
        "fileAssociations": [
            {
                "ext": "html",
                "mimeType": "text/html",
                "role": "Editor"
            }
        ],
        "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}",
        "linux": {
            "category": "Utility",
            "target": [
                "tar.gz",
                "deb",
                "rpm",
                "AppImage"
            ],
            "files": [
                "!.vscode",
                "!.github",
                "!assets/logo/icon.icns",
                "!assets/logo/icon.ico",
                "!src"
            ]
        },
        "mac": {
            "files": [
                "!.vscode",
                "!.github",
                "!assets/logo/1024x1024.png",
                "!assets/logo/512x512.png",
                "!assets/logo/icon.ico",
                "!src"
            ]
        },
        "win": {
            "icon": "./assets/logo/icon.ico",
            "target": [
                "nsis",
                "zip"
            ],
            "files": [
                "!.vscode",
                "!.github",
                "!assets/logo/icon.icns",
                "!assets/logo/1024x1024.png",
                "!assets/logo/512x512.png",
                "!src"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}
